<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.hhn.frontend">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".keytransfer.BeaconBackgroundService"
        android:allowBackup="true"
        android:icon="@mipmap/ic_cowapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_cowapp_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".DebugLog"></activity>
        <activity android:name=".DebugActivity" />
        <activity android:name=".RiskLevelInfoActivity" />
        <activity android:name=".InfectionActivity" />

        <service
            android:name=".provider.NotificationService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TestMenuActivity" />
        <activity android:name=".PushNotificationActivity" />
        <activity android:name=".ThankYouActivity" />
        <activity android:name=".SuspicionActivity" />
        <activity android:name=".ReportInfectionActivity" />
        <activity android:name=".InfoMenuActivity" />
        <activity android:name=".GeneralInfoActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".LogActivity" />
        <activity android:name=".DataProtectionActivity" />

        <service
            android:name="org.altbeacon.beacon.service.BeaconService"
            tools:node="replace">
            <meta-data
                android:name="longScanForcingEnabled"
                android:value="true" />
        </service>
    </application>

</manifest>