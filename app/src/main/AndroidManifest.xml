<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.hhn.frontend">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="de.hhn.frontend.keytransfer.BeaconBackgroundService"
        android:allowBackup="true"
        android:icon="@mipmap/ic_cowapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <service
            android:name="de.hhn.frontend.provider.NotificationService"
            android:enabled="true"
            android:exported="true"></service>

        <activity android:name="de.hhn.frontend.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="de.hhn.frontend.TestMenuActivity" />
        <activity android:name="de.hhn.frontend.PushNotificationActivity" />
        <activity android:name="de.hhn.frontend.ThankYouActivity" />
        <activity android:name="de.hhn.frontend.SuspicionActivity" />
        <activity android:name="de.hhn.frontend.ReportInfectionActivity" />
        <activity android:name="de.hhn.frontend.InfoActivity" />
        <activity android:name="de.hhn.frontend.SettingsActivity" />
        <activity android:name="de.hhn.frontend.LogActivity" />
        <activity android:name="de.hhn.frontend.DataProtectionActivity" />

        <service
            android:name="org.altbeacon.beacon.service.BeaconService"
            tools:node="replace">
            <meta-data
                android:name="longScanForcingEnabled"
                android:value="true" />
        </service>
    </application>

</manifest>