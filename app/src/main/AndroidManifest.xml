<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.hhn.cowapp">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="de.hhn.cowapp.keytransfer.BeaconBackgroundService"
        android:allowBackup="true"
        android:icon="@mipmap/ic_cowapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_cowapp_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name="de.hhn.cowapp.gui.FaqActivity"></activity>
        <activity android:name="de.hhn.cowapp.utils.BufferFileLogActivity" />
        <activity android:name="de.hhn.cowapp.utils.OtherKeysActivity" />
        <activity android:name="de.hhn.cowapp.utils.OwnKeyActivity" />
        <activity
            android:name="de.hhn.cowapp.gui.PermissionActivity"
            android:configChanges="orientation"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hhn.cowapp.utils.DebugLog"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hhn.cowapp.utils.DebugActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hhn.cowapp.gui.RiskLevelInfoActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hhn.cowapp.gui.InfectionActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <service
            android:name="de.hhn.cowapp.notificationservice.NotificationService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="de.hhn.cowapp.gui.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.hhn.cowapp.utils.TestMenuActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hhn.cowapp.gui.PushNotificationActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hhn.cowapp.gui.SuspicionActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hhn.cowapp.gui.InfoMenuActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hhn.cowapp.gui.GeneralInfoActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hhn.cowapp.utils.SettingsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hhn.cowapp.gui.LogActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hhn.cowapp.gui.DataProtectionActivity"
            android:configChanges="orientation"
            android:noHistory="true"
            android:screenOrientation="portrait" />

        <service
            android:name="org.altbeacon.beacon.service.BeaconService"
            tools:node="replace">
            <meta-data
                android:name="longScanForcingEnabled"
                android:value="true" />
        </service>
    </application>

</manifest>