<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F6F8"
    tools:context=".gui.PermissionActivity">

    <Button
        android:id="@+id/requestPermissionButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#27496D"
        android:text="@string/request_permission"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/data_protection_buttons_and_text_textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="@+id/requestPermissionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_push_activity_cow" />
</androidx.constraintlayout.widget.ConstraintLayout>